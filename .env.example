# Required: Jira connection settings
JIRA_HOST=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token-here

# Required for defaults: Comma-separated project keys (first one is the default)
PROJECT_KEYS=PROJ1,PROJ2

# Optional: Default values for ticket creation
DEFAULT_PRIORITY=P2
DEFAULT_ISSUE_TYPE=Non-Customer Story
DEFAULT_SPRINT=123

# Optional: Sprint custom field name (varies by Jira instance, default is usually correct)
SPRINT_FIELD=customfield_10020

# Optional: Status for "ready to pick up" tickets
ACTIONABLE_STATUS=Open
